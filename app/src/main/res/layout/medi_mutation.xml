<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/mutationheader" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:longClickable="true"
        android:scrollbars="vertical|horizontal">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginRight="6dp"
                android:layout_row="1"
                android:text="@string/preis_pkg" />

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginRight="6dp"
                android:layout_row="0"
                android:text="@string/packung" />

            <EditText
                android:id="@+id/modInhaltEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginRight="6dp"
                android:layout_row="0"
                android:cursorVisible="true"
                android:hint="@string/inhalt"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textStyle="italic" />

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_row="0"
                android:focusable="true"
                android:text="@string/dosis" />

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_row="2"
                android:text="@string/gueltig_ab"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/modDatumGueltigAbTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_row="2" />

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_row="3"
                android:text="@string/bis"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/modDatumGueltigBisTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_row="1"
                android:text="@string/morgens" />

            <EditText
                android:id="@+id/modDosisMoEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginRight="6dp"
                android:layout_row="1"
                android:cursorVisible="true"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_row="2"
                android:text="@string/mittags" />

            <EditText
                android:id="@+id/modDosisMiEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginRight="6dp"
                android:layout_row="2"
                android:cursorVisible="true"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_row="3"
                android:text="@string/abends" />

            <EditText
                android:id="@+id/modDosisAbEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginRight="6dp"
                android:layout_row="3"
                android:cursorVisible="true"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_row="4"
                android:text="@string/nachts" />

            <EditText
                android:id="@+id/modDosisNaEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginRight="6dp"
                android:layout_row="4"
                android:cursorVisible="true"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_row="5"
                android:text="@string/andere" />

            <EditText
                android:id="@+id/modDosisAndEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginRight="6dp"
                android:layout_row="5"
                android:cursorVisible="true"
                android:imeOptions="actionNext"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/modPreisEt"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginRight="6dp"
                android:layout_row="1"
                android:cursorVisible="true"
                android:hint="@string/CHF"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textStyle="italic" />

        </GridLayout>
    </ScrollView>


</LinearLayout>