<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hu.com.mediplan11.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/headerDatumGl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/headerbackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bestandHeaderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Lager:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/bestandDatumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/planHeaderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Plan:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/planDatumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <WebView
        android:id="@+id/chartWv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <TableLayout
        android:id="@+id/mediHeaderTl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:shrinkColumns="3">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/headerTv00"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="6dp"
                android:layout_weight="2"
                android:background="@color/table_primary"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="3dp"
                android:text="Nr."
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/headerTv01"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="6dp"
                android:layout_weight="10"
                android:background="@color/table_primary"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="3dp"
                android:text="Medikament"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/headerTv02"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="6dp"
                android:layout_weight="2"
                android:background="@color/table_primary"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="3dp"
                android:text="Pkg"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/headerTv03"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="6dp"
                android:layout_weight="2"
                android:background="@color/table_primary"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="3dp"
                android:text="Kauf"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/headerTv04"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="6dp"
                android:layout_weight="3"
                android:background="@color/table_primary"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="3dp"
                android:text="Lager"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

        </TableRow>

    </TableLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <TableLayout
            android:id="@+id/medi_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="3">

            <!--
                        <include layout="@layout/row_layout" />

                        <include layout="@layout/row_layout" />
            -->

        </TableLayout>
    </ScrollView>

</LinearLayout>
